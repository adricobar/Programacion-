// mcm.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include <iostream>


using namespace std;

int main(int argc, char* argv[])
 { int a, b, x, z, y=1, i=2; 
 cout<<"ingrese primer numero: \n"; 
 cin>>a; cout<<"ingrese segundo numero: \n"; 
 cin>>b; 
   if (a<b)
  {x=a; z=b;
   } 
   else 
  {x=b; z=a;
  } 
do{ 
  if (x%i==0)
  { if(z%i==0)
  { y=y*i; x=x/i; z=z/i; i=2; 
   }
 else i++; 
  } else i++; 
  } while(i<=x); 
  y=y*z*x; 
  cout<<"el MCM es "<<y<<"\n"; 
getch(); 
getch(); 
return 0; 
}

